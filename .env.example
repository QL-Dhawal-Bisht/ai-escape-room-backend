# Copy this file to .env and fill in your actual values

# OpenAI API Key (Required)
OPENAI_API_KEY=your_openai_api_key_here

# JWT Secret Key (Generate a strong random key)
SECRET_KEY=your_super_secret_jwt_key_change_this_in_production

# MongoDB Atlas Connection String (Required)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=YourApp

# Database Configuration
USE_MONGODB=true

# Environment
ENVIRONMENT=development

# Optional: GROQ API Key (alternative to OpenAI)
# GROQ_API_KEY=your_groq_api_key_here

# CORS Settings (comma-separated list of allowed origins)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com